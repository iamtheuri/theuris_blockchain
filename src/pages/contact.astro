---
import InteriorHero from "../components/InteriorHero.astro";
import InteriorContent from "../components/InteriorContent.astro";
import DefaultLayout from "../layouts/Default.astro";
import { CutCornerButton } from "../components/CutCornerButton";
import Input from "../components/input.astro";
import TextArea from "../components/textarea.astro";

const formspreeId = process.env.FORMSPREE_ID;
---

<DefaultLayout>
  <!-- Hero Secion -->
  <InteriorHero>
    <div class="relative">
      <p
        class="uppercase font-extrablo
       text-center text-zinc-500 tracking-wider"
      >
        Let's Talk
      </p>
      <h1
        class="font-heading font-black text-5xl md:text-6xl lg:text-7xl text-center mt-4"
      >
        Contact Us
      </h1>
      <p
        class="text-center text-xl md:text-2xl mt-6 text-zinc-400 max-w-xl mx-auto"
      >
        We're here to help an danswer any questions you may have. Reach out to
        us to learn more about our services, get support, or apply for positions
      </p>
    </div>
  </InteriorHero>
  <InteriorContent>
    <div class="max-w-xl mx-auto">
      <h2 class="font-heading font-black text-3xl">
        What can we help you with
      </h2>
      <form
        class="flex flex-col mt-8"
        method="POST"
        action=`https://formspree.io/f/${formspreeId}`
      >
        <label for="name">Name</label>
        <Input type="text" name="name" id="name" class="mt-1" />
        <label class="mt-4" for="email">Email</label>
        <Input type="text" name="email" id="email" class="mt-1" />
        <label class="mt-4" for="message">Message</label>
        <TextArea name="message" id="message" class="mt-1" />
        <CutCornerButton className="mt-4">Send Message</CutCornerButton>
      </form>
    </div>
  </InteriorContent>
</DefaultLayout>
